@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/Index.cshtml";

    if (ViewData["Title"]?.ToString() == "ContactList")
    {
        ViewBag.ActiveContact = "active";
    }
    else
    {
        ViewBag.ActiveContact = "";
    }
    int count = 0;
}
<!DOCTYPE html>
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">İletişim Bilgileri</div>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped mt-3">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Telefon</th>
                                            <th scope="col">E-mail</th>
                                            <th scope="col">Adres</th>
                                            <th scope="col">Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                <td>@item.Address</td>
                                                <td><a href="/Contact/ContactUpdate/@item.ContactId" class="btn btn-primary" style="margin-top: 15px;">Düzenle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

