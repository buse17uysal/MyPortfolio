@model List<Portfolio>
@{
    ViewData["Title"] = "ProjectList";
    Layout = "~/Views/Layout/Index.cshtml";

    if (ViewData["Title"]?.ToString() == "ProjectList")
    {
        ViewBag.ActivePortfolio = "active"; 
    }
    else
    {
        ViewBag.ActivePortfolio = "";
    }
    int count = 0;

}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Projelerim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Proje Listesi</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Link</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="@item.ImageUrl" style="height:80px;width:120px" /></td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Description</td>
                                        <td> <a class="link" target="_blank" href="@item.Url">Proje Linki</a></td>
                                        <td><a href="/Portfolio/UpdateProject/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Portfolio/DeleteProject/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }        
                            </tbody>
                        </table>
                        <a href="/Portfolio/CreateProject/" class="btn btn-primary">Yeni Proje Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


