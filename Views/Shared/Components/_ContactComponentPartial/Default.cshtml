@model List<MyPortfolio.DAL.Entites.Contact>
<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>Bana Ulaşın.</h1>

            <p class="lead">İletişim bilgilerinden veya direkt mesaj atarak bana ulaşabilirsiniz!</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form name="contactForm" id="contactForm" method="post" action="/Message/CreateMessage">
                <fieldset>
                    <div class="form-field">
                        <input name="NameSurname" type="text" id="contactName" placeholder="Ad-Soyad" minlength="2" required class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="Email" type="email" id="contactEmail" placeholder="Email" required class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="Subject" type="text" id="contactSubject" placeholder="Konu Başlığı" class="full-width">
                    </div>
                    <div class="form-field">
                        <textarea name="MessageDetail" id="contactMessage" placeholder="Mesaj" rows="10" required class="full-width"></textarea>
                    </div>
                    <div class="form-field">
                        <button type="submit" class="full-width btn--primary">Gönder</button>
                    </div>
                </fieldset>
            </form>

            

            <!-- contact-warning -->
            <div class="message-warning">
                Tekrar deneyiniz!
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Mesajınız başarıyla gönderildi!<br>
            </div>

        </div>
        <div class="col-four tab-full contact__infos">
            @foreach(var item in Model)
            {
                <h4 class="h06">Telefon</h4>
                <p>
                    @item.Phone
                    
                </p>

                <h4 class="h06">Email</h4>
                <p>
                    @item.Email
                </p>

                <h4 class="h06">Adres</h4>
                <p>
                    @item.Address <br />
                    17600
                </p>
            }
           
        </div>

    </div>

</section> 