<div class="sidebar">
	<div class="scrollbar-inner sidebar-wrapper">
		<div class="user">
			<div class="photo">
				<img src="https://i.hizliresim.com/od20o5f.png">
			</div>
			<div class="info">
				<a class="" data-toggle="collapse" href="#collapseExample" aria-expanded="true">
					<span>
						Buse Uysal
						<span class="user-level">Admin</span>
						<span class="caret"></span>
					</span>
				</a>
				<div class="clearfix"></div>

				<div class="collapse in" id="collapseExample" aria-expanded="true" style="">
					<ul class="nav">
						<li>
							<a href="/Admin/Profile/">
								<span class="link-collapse">Profilim</span>
							</a>
						</li>
						<li>
							<a href="#edit/Admin/Profile/"
							span class="link-collapse">Şifre Değiştir</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<ul class="nav">

			<li class="nav-item @ViewBag.ActiveDashboard">
				<a href="/Dashboard/Index/" class="nav-link">
					<i class="la la-dashboard"></i>
					<p>Dashboard</p>
				</a>
			</li>
			<li class="nav-item">
				<a href="/Default/Index/" target="_blank" class="nav-link">
					<i class="la la-home"></i>
					<p>Siteye Git</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveAbout">
				<a href="/About/AboutMe/" class="nav-link">
					<i class="la la-user"></i>
					<p>Hakkımda</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveToList">
				<a href="/ToDoList/Index/" class="nav-link">
					<i class="la la-pencil-square"></i>
					<p>Yapılacaklar</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveExperience">
				<a href="/Experience/ExperienceList" class="nav-link">
					<i class="la la-briefcase"></i>
					<p>Deneyimler</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveContact">
				<a href="/Contact/ContactList/" class="nav-link">
					<i class="la la-phone"></i>
					<p>İletişim Bilgileri</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActivePortfolio">
				<a href="/Portfolio/ProjectList" class="nav-link">
					<i class="la la-github"></i>
					<p>Projelerim</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveSkill">
				<a href="/Skill/SkillList/" class="nav-link">
					<i class="la la-code"></i>
					<p>Yeteneklerim</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveMedia">
				<a href="/SocialMedia/MediaList/" class="nav-link">
					<i class="la la-globe"></i>
					<p>Sosyal Medya</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveInbox">
				<a href="/Message/Inbox" class="nav-link">
					<i class="la la-inbox"></i>
					<p>Gelen Kutusu</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveStatic">
				<a href="/Statistic/Index/" class="nav-link">
					<i class="la la-bar-chart"></i>
					<p>İstatistikler</p>
				</a>
			</li>
			<li class="nav-item @ViewBag.ActiveProfile">
				<a href="@Url.Action("Profile", "Admin")" class="nav-link">
					<i class="la la-cog"></i>
					<p>Profilim</p>
				</a>
			</li>
			<li class="nav-item">
				<a href="javascript:void(0);" data-toggle="modal" data-target="#logoutModal" class="nav-link">
					<i class="la la-sign-out"></i>
					<p>Çıkış Yap</p>
				</a>
			</li>

		</ul>
	</div>
</div>  

<!-- Çıkış Yap Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="logoutModalLabel">Çıkış Yapmak Üzeresiniz</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Çıkmak istediğinize emin misiniz?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
				<a href="/Login/Logout" class="btn btn-primary">Çıkış Yap</a>
			</div>
		</div>
	</div>
</div>

<!-- Bootstrap JS ve jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
