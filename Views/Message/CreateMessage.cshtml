@model Message

@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesaj Gönder</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Mesaj</div>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="CreateMessage" asp-controller="Message">
                            <div class="form-group">
                                <label for="NameSurname">Ad-Soyad</label>
                                <input type="text" class="form-control" id="NameSurname" name="NameSurname" required />
                            </div>
                            <div class="form-group">
                                <label for="Email">E-posta</label>
                                <input type="email" class="form-control" id="Email" name="Email" required />
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu Başlığı</label>
                                <input type="text" class="form-control" id="Subject" name="Subject" />
                            </div>
                            <div class="form-group">
                                <label for="MessageDetail">Mesaj Detayı</label>
                                <textarea class="form-control" id="MessageDetail" name="MessageDetail" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Mesajı Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

