@model About
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bilgileri Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <input type="hidden" asp-for="Title" />
                            <label>Kısa Bilgi</label>
                            <textarea rows="2" class="form-control" asp-for="SubDescription"></textarea>
                            <br />

                            <label>Özgeçmiş</label>
                            <textarea rows="6" class="form-control" asp-for="Details"></textarea>
                            <br />

                            <button class="btn btn-warning">Hakkımdaki Bilgileri Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



