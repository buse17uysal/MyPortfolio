@model List<About>
@{
    ViewData["Title"] = "AboutMe";
    Layout = "~/Views/Layout/Index.cshtml";

    if (ViewData["Title"]?.ToString() == "AboutMe")
    {
        ViewBag.ActiveAbout = "active";  // ViewBag'e "active" sınıfını ata
    }
    else
    {
        ViewBag.ActiveAbout = "";
    }
    int count = 0;
}
<!DOCTYPE html>
<html>
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Daha Fazlası</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-typo">
                            <tbody>
                                <tr>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <td>
                                            <p>@count</p>

                                        </td>
                                        <td>
                                            <blockquote>
                                                <p class="blockquote blockquote-primary">
                                                    <strong>@item.SubDescription</strong>
                                                    <br>
                                                    <br>
                                                    <hr />
                                                <p>@item.Details</p>
                                                </p>
                                            </blockquote>
                                            <a href="/About/Update/@item.AboutId" class="btn btn-primary" style="margin-top: 15px;">Düzenle</a>
                                        </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
